<h1>WELCOME</h1>
<h2>EVENTS</h2>

<% @events.each do |evt| %>
  <ul>
    <li>
      <%= link_to evt.name, event_path(evt) %>
    </li>
  </ul>
<% end %>

<% if user_signed_in?  %>
  <%= link_to 'Create Event', new_event_path %><br>
  <%= link_to "Sign Out", destroy_user_session_path, 'data-turbo-method': :delete %>
<% else %>
  <%= link_to "Sign in", new_user_session_path %>
<% end %>