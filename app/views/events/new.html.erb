<%= form_with model: @event do |form| %>
  <%= form.label :name, 'Event Name:' %>
  <%= form.text_field :name %><br><br>
  <%= form.label :date, 'Date:' %>
  <%= form.date_field :date %><br><br>
  <%= form.label :location, 'Location:' %>
  <%= form.text_field :location %><br><br>
  <%= form.submit 'Submit' %>
<% end %>

